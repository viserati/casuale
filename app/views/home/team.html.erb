<h1>Team</h1>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <% if @team_number > 0 %>
      Your Superhero team
      <% else %>
      How Many Team Members do you want?
      <% end %>
    </h3>
  </div>
  <div class="panel-body">


  <% if @team_number > 0 %>
    <%= render 'home/show_team' %>
  <% else %>
    <%= render 'home/create_team' %>
  <% end %>
  </div>

  <div class="panel-footer"><%= link_to 'Create  a Team', home_team_path %></div>
</div>
