<br>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to 'Activate a Superhero', root_path %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <br>
      <div class="col-md-4">
        <img src="<%= @avatar %>">
        <br>
        <br>
      </div>

      <div class="col-md-4">
        <h4>Superhero Name:</h4>  <%= @hero_prefix %> <%= @hero_name %>
        <br>
        <h4>Superhero Power:</h4> <%= @hero_power %>
        <br>
        <h4>Your Undercover Day Job is:</h4> <%= @corp_title %>
        <br>
        <h4>Your Corporate Superpower is:</h4> <%= @corp_power %>
      </div>
      <div class="col-md-4">
        <%= button_to "Refresh", root_path, :method => :get %>
      </div>


    </div>
  </div>
  <div class="panel-footer"><%= link_to 'Create A Team', home_team_path %></div>
</div>
